# vim: set ft=ssh_config:

Host *
  ForwardAgent yes
  ForwardX11Trusted yes
  ServerAliveInterval 60
  TCPKeepAlive yes
  XAuthLocation /usr/bin/xauth

Host github github.com
  HostName github.com
  User git
{{- if not ( contains "tako" .chezmoi.hostname ) }}
  IdentityFile ~/.ssh/id_ed25519_github.pub
{{- else if ( and ( contains "tako" .chezmoi.hostname ) ( ge ( atoi ( substr 4 6 .chezmoi.hostname ) ) 58 ) ) }}
  IdentityFile ~/.ssh/id_ed25519_github
{{- else }}
  IdentityFile ~/.ssh/id_ecdsa_github
{{- end }}

Host ssh.ppnt.dev home
  HostName ssh.ppnt.dev
  IdentityFile ~/.ssh/id_ed25519_ppnt-dev
  ProxyCommand ~/.local/share/mise/installs/cloudflared/latest/bin/cloudflared access ssh --hostname %h
{{- if eq .chezmoi.username "tako" }}

Host 192.168.0.32
  HostName tako32
  HostKeyAlgorithms +ssh-dss,ssh-rsa
  PubKeyAcceptedAlgorithms +ssh-rsa
{{- end }}
