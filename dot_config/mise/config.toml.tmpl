# Alternative commands
bat = "latest"
choose = "latest"
delta = "latest"
eza = "latest"
fd = "latest"
ripgrep = "latest"
tokei = "latest"
zoxide = "latest"

{{- if not ( contains "tako" .chezmoi.hostname ) }}
bitwarden = "latest"
{{- end }}
chezmoi = "latest"
fzf = "latest"
